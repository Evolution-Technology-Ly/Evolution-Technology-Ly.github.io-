@page "/en/contact"
@model EvolutionTechnology.Pages.En.ContactModel
@{
    ViewData["Title"] = "Contact";
    ViewData["MetaDescription"] = "Contact Evolution Technology — submit a project inquiry or request a technical consultation.";
}

<section class="et-page-header">
    <div class="container">
        <a href="/en" class="et-page-back">← Home</a>
        <h1 class="et-page-title">Contact</h1>
        <p class="et-page-description">
            Submit an inquiry using the form below. We review all submissions and respond
            within two business days with an initial technical position or a request for
            additional information.
        </p>
    </div>
</section>

<section class="et-section">
    <div class="container">
        <div class="et-two-col" style="gap:5rem;">

            <!-- Form column -->
            <div>
                @if (Model.SubmitSuccess)
                {
                    <div class="et-alert et-alert-success" role="alert">
                        <strong>Inquiry received.</strong> A member of our technical team will review your
                        message and respond within two business days.
                    </div>
                }

                <form method="post" class="et-contact-form" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="et-form-grid">

                        <div class="et-form-group">
                            <label class="et-label-text" for="FullName">Full Name <span aria-hidden="true">*</span></label>
                            <input id="FullName" name="ContactForm.FullName" type="text"
                                   class="et-input" value="@Model.ContactForm.FullName"
                                   autocomplete="name" required />
                            <span class="et-field-error" data-valmsg-for="ContactForm.FullName" data-valmsg-replace="true"></span>
                        </div>

                        <div class="et-form-group">
                            <label class="et-label-text" for="Organization">Organization <span aria-hidden="true">*</span></label>
                            <input id="Organization" name="ContactForm.Organization" type="text"
                                   class="et-input" value="@Model.ContactForm.Organization"
                                   autocomplete="organization" required />
                            <span class="et-field-error" data-valmsg-for="ContactForm.Organization" data-valmsg-replace="true"></span>
                        </div>

                        <div class="et-form-group">
                            <label class="et-label-text" for="Email">Email Address <span aria-hidden="true">*</span></label>
                            <input id="Email" name="ContactForm.Email" type="email"
                                   class="et-input" value="@Model.ContactForm.Email"
                                   autocomplete="email" required />
                            <span class="et-field-error" data-valmsg-for="ContactForm.Email" data-valmsg-replace="true"></span>
                        </div>

                        <div class="et-form-group">
                            <label class="et-label-text" for="Phone">Phone <span style="color:var(--text-muted);font-weight:400;">(optional)</span></label>
                            <input id="Phone" name="ContactForm.Phone" type="tel"
                                   class="et-input" value="@Model.ContactForm.Phone"
                                   autocomplete="tel" />
                            <span class="et-field-error" data-valmsg-for="ContactForm.Phone" data-valmsg-replace="true"></span>
                        </div>

                        <div class="et-form-group et-form-full">
                            <label class="et-label-text" asp-for="ContactForm.ProjectType">Project Type <span aria-hidden="true">*</span></label>
                            <select asp-for="ContactForm.ProjectType"
                                    asp-items="@Model.ProjectTypes"
                                    class="et-select" required>
                            </select>
                            <span asp-validation-for="ContactForm.ProjectType" class="et-field-error"></span>
                        </div>

                        <div class="et-form-group et-form-full">
                            <label class="et-label-text" for="Subject">Subject <span aria-hidden="true">*</span></label>
                            <input id="Subject" name="ContactForm.Subject" type="text"
                                   class="et-input" value="@Model.ContactForm.Subject" required />
                            <span class="et-field-error" data-valmsg-for="ContactForm.Subject" data-valmsg-replace="true"></span>
                        </div>

                        <div class="et-form-group et-form-full">
                            <label class="et-label-text" for="Message">
                                Message <span aria-hidden="true">*</span>
                                <span style="color:var(--text-muted);font-weight:400;"> — minimum 20 characters</span>
                            </label>
                            <textarea id="Message" name="ContactForm.Message" class="et-textarea"
                                      rows="6" required>@Model.ContactForm.Message</textarea>
                            <span class="et-field-error" data-valmsg-for="ContactForm.Message" data-valmsg-replace="true"></span>
                        </div>

                    </div>

                    <div style="margin-top:1.5rem;">
                        <button type="submit" class="et-btn et-btn-primary" data-submitting="Sending…">
                            Submit Inquiry
                        </button>
                    </div>
                </form>
            </div>

            <!-- Info column -->
            <div>
                <div style="padding-top:0.25rem;">
                    <h2 style="font-size:1.125rem;margin-bottom:1.25rem;">What to Expect</h2>

                    <ol class="et-steps" style="margin-bottom:2.5rem;">
                        <li>Submit your inquiry using the form.</li>
                        <li>We review your message and technical context within two business days.</li>
                        <li>We respond with either an initial technical position or a request for additional information.</li>
                        <li>If scope is sufficiently defined, we propose an engagement model and next steps.</li>
                    </ol>

                    <hr style="border:none;border-top:1px solid var(--border);margin:2rem 0;">

                    <h3 style="font-size:0.875rem;font-weight:600;margin-bottom:0.75rem;color:var(--text-primary);">Direct Contact</h3>
                    <a href="mailto:contact@evolutiontechnology.ly" style="font-size:0.9375rem;color:var(--accent);">
                        contact@evolutiontechnology.ly
                    </a>

                    <hr style="border:none;border-top:1px solid var(--border);margin:2rem 0;">

                    <p style="font-size:0.8125rem;color:var(--text-muted);line-height:1.7;">
                        We do not engage in unsolicited sales calls or speculative outreach.
                        All inquiries are reviewed by technical staff, not sales personnel.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
