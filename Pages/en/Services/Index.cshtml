@page "/en/services"
@model EvolutionTechnology.Pages.En.Services.IndexModel
@{
    ViewData["Title"] = "Services";
    ViewData["MetaDescription"] = "Evolution Technology services: System Architecture, Enterprise Development, Modernization & Integration, and Technical Consulting.";
}

<section class="et-page-header">
    <div class="container">
        <a href="/en" class="et-page-back">← Home</a>
        <h1 class="et-page-title">Services</h1>
        <p class="et-page-description">
            Four structured service areas. Each engagement is defined by scope, methodology,
            and measurable deliverables. No ambiguity in what we provide or how we provide it.
        </p>
    </div>
</section>

<section class="et-section">
    <div class="container">
        <div class="et-services-grid">

            <a href="/en/services/architecture" class="et-card et-card-link">
                <span class="et-card-number">01</span>
                <h2 class="et-card-title">System Architecture &amp; Engineering</h2>
                <p class="et-card-body">
                    Designing scalable, structured system foundations. We assess constraints,
                    define system boundaries, select appropriate patterns, and produce complete
                    architectural documentation.
                </p>
                <span class="et-card-link-indicator">Full service details →</span>
            </a>

            <a href="/en/services/development" class="et-card et-card-link">
                <span class="et-card-number">02</span>
                <h2 class="et-card-title">Custom Enterprise System Development</h2>
                <p class="et-card-body">
                    Building tailored enterprise-grade systems from formally defined requirements.
                    Full-cycle delivery: design, development, testing, and deployment.
                </p>
                <span class="et-card-link-indicator">Full service details →</span>
            </a>

            <a href="/en/services/modernization" class="et-card et-card-link">
                <span class="et-card-number">03</span>
                <h2 class="et-card-title">System Modernization &amp; Integration</h2>
                <p class="et-card-body">
                    Structured modernization of legacy systems and integration of disparate
                    infrastructure. Risk-mapped migration with continuous operational continuity.
                </p>
                <span class="et-card-link-indicator">Full service details →</span>
            </a>

            <a href="/en/services/consulting" class="et-card et-card-link">
                <span class="et-card-number">04</span>
                <h2 class="et-card-title">Technical Consulting &amp; System Auditing</h2>
                <p class="et-card-body">
                    Objective, documented technical advisory. Architecture reviews, system
                    assessments, technology evaluations, and actionable recommendations.
                </p>
                <span class="et-card-link-indicator">Full service details →</span>
            </a>

        </div>
    </div>
</section>

<section class="et-cta-section">
    <div class="container" style="text-align:center;max-width:40rem;">
        <span class="et-label">Engage</span>
        <h2 style="font-size:1.75rem;letter-spacing:-0.02em;margin-bottom:1rem;">
            Not Sure Which Service Applies?
        </h2>
        <p style="margin-bottom:2rem;">
            Describe your technical situation. We will identify the appropriate service
            area and outline a structured engagement model.
        </p>
        <a href="/en/contact" class="et-btn et-btn-primary">Submit an Inquiry</a>
    </div>
</section>
