@page "/en"
@model EvolutionTechnology.Pages.En.IndexModel
@{
    ViewData["Title"] = "Home";
    ViewData["MetaDescription"] = "Evolution Technology — A long-term technical partner specializing in System Architecture, Enterprise Development, System Modernization, and Technical Consulting.";
}

<!-- Hero -->
<section class="et-hero">
    <div class="container">
        <span class="et-hero-eyebrow">Evolution Technology</span>
        <h1 class="et-hero-title">Engineering Reliable Systems.<br>Building Long-Term Partnerships.</h1>
        <p class="et-hero-lead">
            Evolution Technology is a technical engineering firm. We design, develop, and sustain enterprise
            systems for organizations that require structured, accountable, and technically rigorous partnerships.
        </p>
        <div class="et-hero-actions">
            <a href="/en/contact" class="et-btn et-btn-primary">Discuss a Project</a>
            <a href="/en/services" class="et-btn et-btn-outline">View Services</a>
        </div>
    </div>
</section>

<!-- Services overview -->
<section class="et-section">
    <div class="container">
        <span class="et-label">Services</span>
        <h2 style="font-size:1.5rem;margin-bottom:0.75rem;">What We Do</h2>
        <p style="max-width:52ch;color:var(--text-muted);margin-bottom:3rem;">
            Four structured service areas, each with defined scope, methodology, and deliverables.
        </p>

        <div class="et-services-grid">

            <a href="/en/services/architecture" class="et-card et-card-link">
                <span class="et-card-number">01</span>
                <h3 class="et-card-title">System Architecture &amp; Engineering</h3>
                <p class="et-card-body">
                    Designing scalable, structured system foundations — from decomposition and component
                    design through to architectural documentation and validation.
                </p>
                <span class="et-card-link-indicator">View service →</span>
            </a>

            <a href="/en/services/development" class="et-card et-card-link">
                <span class="et-card-number">02</span>
                <h3 class="et-card-title">Custom Enterprise System Development</h3>
                <p class="et-card-body">
                    Building tailored enterprise-grade systems aligned to operational requirements,
                    with structured delivery from requirements through deployment.
                </p>
                <span class="et-card-link-indicator">View service →</span>
            </a>

            <a href="/en/services/modernization" class="et-card et-card-link">
                <span class="et-card-number">03</span>
                <h3 class="et-card-title">System Modernization &amp; Integration</h3>
                <p class="et-card-body">
                    Upgrading legacy systems and integrating disparate infrastructures while
                    preserving operational continuity and reducing technical risk.
                </p>
                <span class="et-card-link-indicator">View service →</span>
            </a>

            <a href="/en/services/consulting" class="et-card et-card-link">
                <span class="et-card-number">04</span>
                <h3 class="et-card-title">Technical Consulting &amp; System Auditing</h3>
                <p class="et-card-body">
                    Architecture reviews, system assessments, and structured technical advisory
                    for organizations navigating complex system decisions.
                </p>
                <span class="et-card-link-indicator">View service →</span>
            </a>

        </div>
    </div>
</section>

<!-- Partnership section -->
<section class="et-section et-section-alt">
    <div class="container">
        <div class="et-two-col">
            <div>
                <span class="et-label">Partnership Model</span>
                <h2 style="font-size:1.625rem;margin-bottom:1.25rem;letter-spacing:-0.02em;">
                    A Technical Partner, Not a Vendor
                </h2>
                <p>
                    We engage with clients as long-term technical partners. Our model is built on
                    structured delivery, clearly defined scope, and sustained accountability across
                    the full lifecycle of your systems.
                </p>
                <p>
                    We do not offer off-the-shelf solutions or time-boxed engagements that end at
                    handover. We remain technically accountable to the systems we design and build.
                </p>
                <a href="/en/about" class="et-btn et-btn-outline" style="margin-top:0.5rem;">
                    Our Approach
                </a>
            </div>
            <div>
                <div style="border-inline-start:2px solid var(--border);padding-inline-start:2rem;">
                    <div style="margin-bottom:2.5rem;">
                        <span style="font-family:var(--font-mono);font-size:0.6875rem;font-weight:500;color:var(--text-muted);letter-spacing:0.08em;display:block;margin-bottom:0.375rem;">Engagement Principle</span>
                        <p style="font-size:1.0625rem;font-weight:500;color:var(--text-primary);line-height:1.6;margin:0;">
                            "Technical depth over surface coverage. Sustained accountability over project hand-off."
                        </p>
                    </div>
                    <div style="margin-bottom:2.5rem;">
                        <span style="font-family:var(--font-mono);font-size:0.6875rem;font-weight:500;color:var(--text-muted);letter-spacing:0.08em;display:block;margin-bottom:0.375rem;">Delivery Standard</span>
                        <p style="font-size:1.0625rem;font-weight:500;color:var(--text-primary);line-height:1.6;margin:0;">
                            "Documented, traceable, and auditable at every stage."
                        </p>
                    </div>
                    <div>
                        <span style="font-family:var(--font-mono);font-size:0.6875rem;font-weight:500;color:var(--text-muted);letter-spacing:0.08em;display:block;margin-bottom:0.375rem;">Scope Discipline</span>
                        <p style="font-size:1.0625rem;font-weight:500;color:var(--text-primary);line-height:1.6;margin:0;">
                            "No ambiguity in requirements. No scope drift in delivery."
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="et-cta-section">
    <div class="container" style="text-align:center;max-width:42rem;">
        <span class="et-label">Start a Conversation</span>
        <h2 style="font-size:1.875rem;letter-spacing:-0.02em;margin-bottom:1rem;">
            Ready to Discuss Your System Requirements?
        </h2>
        <p style="margin-bottom:2rem;">
            Provide a brief description of your technical challenge or project scope.
            We will review and respond with an initial assessment.
        </p>
        <a href="/en/contact" class="et-btn et-btn-primary">Submit an Inquiry</a>
    </div>
</section>
